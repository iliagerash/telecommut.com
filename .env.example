# App
PUBLIC_APP_URL=http://localhost:4321
NODE_ENV=development
SHOW_ADS=false
MAIN_DOMAIN=example.com
PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# MySQL (application DB)
DATABASE_URL=mysql://root:password@127.0.0.1:3306/telecommut

# Better Auth
BETTER_AUTH_SECRET=replace-with-long-random-secret
BETTER_AUTH_URL=http://localhost:4321
# Optional comma-separated list; defaults to BETTER_AUTH_URL when omitted.
BETTER_AUTH_TRUSTED_ORIGINS=http://localhost:4321
BETTER_AUTH_REQUIRE_EMAIL_VERIFICATION=true
BETTER_AUTH_VERIFY_TOKEN_TTL_SECONDS=3600
BETTER_AUTH_RESET_TOKEN_TTL_SECONDS=3600

# Mailgun
MAILGUN_API_KEY=replace-with-mailgun-key
MAILGUN_DOMAIN=example.com
MAILGUN_FROM="Telecommut <info@example.com>"
MAILGUN_REGION=us
CONTACT_INBOX=support@example.com

# Aggregator source DB
AGG_DB_CONNECTION=agg
AGG_DB_HOST=127.0.0.1
AGG_DB_PORT=3306
AGG_DB_DATABASE=remote
AGG_DB_USERNAME=agg
AGG_DB_PASSWORD=replace-with-agg-password

AGG_DESTINATION=telecommut.com
AGG_IMAGE_URL=http://127.0.0.1/uploads/
AGG_IMPORT_MIN=5
AGG_IMPORT_MAX=10

# Optional remote DB name for analyze crawler inserts
AGG_ANALYZE_DATABASE=analyze

# Sitemaps
SITEMAP_MAIN=sitemap.xml
SITEMAP_CORE=sitemap_core.xml
SITEMAP_CATEGORIES=categories.xml

# Indexing/resubmission
GOOGLE_SERVICE_ENABLED=false
GOOGLE_SERVICE_JSON=/absolute/path/to/google_indexing.json

BING_API_KEY=replace-with-bing-api-key
RESUBMIT_START=24
JOBS_THRESHOLD=20

# Cloudflare + GEOIP
CLOUDFLARE_API_KEY=replace-with-cloudflare-api-key
CLOUDFLARE_ZONE_ID=replace-with-cloudflare-zone-id
GEOIP_ENDPOINT=http://127.0.0.1/geoip/
