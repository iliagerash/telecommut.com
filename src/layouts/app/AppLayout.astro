---
import "../../styles/global.css";
import { toAbsoluteUrl } from "@/lib/seo";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Member workspace scaffold." } = Astro.props;
const canonicalHref = toAbsoluteUrl(`${Astro.url.pathname}${Astro.url.search}`);
const navItems = [
  { href: "/app/dashboard", label: "Dashboard" },
  { href: "/app/profile", label: "Profile" },
  { href: "/search/jobs", label: "Jobs" },
  { href: "/resumes", label: "Candidates" },
  { href: "/contact", label: "Support" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex,nofollow" />
    <link rel="canonical" href={canonicalHref} />
    <title>{title} | Telecommut Workspace</title>
  </head>
  <body>
    <a
      href="#app-main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50 focus:rounded-md focus:bg-primary focus:px-3 focus:py-2 focus:text-primary-foreground"
    >
      Skip to main content
    </a>
    <main class="bg-brand-grid mx-auto min-h-screen p-6 md:p-10">
      <header class="glass-panel mx-auto mb-8 max-w-6xl rounded-2xl border px-5 py-4 shadow-sm">
        <div class="flex flex-wrap items-center justify-between gap-3">
          <h1 class="text-2xl font-semibold tracking-tight">Member Workspace</h1>
          <a class="rounded-full border px-3 py-1.5 text-sm font-medium hover:bg-secondary" href="/admin/dashboard">Admin</a>
        </div>
        <nav class="mt-3 -mx-1 flex gap-2 overflow-x-auto px-1 pb-1 text-sm text-muted-foreground">
          {
            navItems.map((item) => {
              const isActive = Astro.url.pathname === item.href;
              return (
                <a
                  class:list={[
                    "rounded-full border px-3 py-1.5 whitespace-nowrap transition-colors",
                    isActive ? "bg-primary text-primary-foreground border-primary" : "hover:bg-secondary",
                  ]}
                  href={item.href}
                  aria-current={isActive ? "page" : undefined}
                >
                  {item.label}
                </a>
              );
            })
          }
        </nav>
      </header>
      <section id="app-main-content" class="mx-auto max-w-6xl">
        <slot />
      </section>
    </main>
  </body>
</html>
