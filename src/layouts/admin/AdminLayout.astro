---
import "../../styles/global.css";
import { toAbsoluteUrl } from "@/lib/seo";
import AdminLogoutButton from "@/components/admin/AdminLogoutButton";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Admin surface scaffold." } = Astro.props;
const canonicalHref = toAbsoluteUrl(`${Astro.url.pathname}${Astro.url.search}`);
const navItems = [
  { href: "/admin/jobs", label: "Jobs" },
  { href: "/admin/resumes", label: "Resumes" },
  { href: "/admin/users", label: "Employers" },
  { href: "/admin/seo", label: "SEO" },
  { href: "/admin/traffic", label: "Traffic" },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex,nofollow" />
    <link rel="canonical" href={canonicalHref} />
    <title>{title} | Telecommut Admin</title>
  </head>
  <body>
    <a
      href="#admin-main-content"
      class="sr-only focus:not-sr-only focus:fixed focus:top-3 focus:left-3 focus:z-50 focus:rounded-md focus:bg-primary focus:px-3 focus:py-2 focus:text-primary-foreground"
    >
      Skip to main content
    </a>
    <main class="bg-admin-grid mx-auto min-h-screen p-6 md:p-10">
      <div class="mx-auto mb-3 flex max-w-6xl items-center justify-end gap-4 px-1 pr-3 text-sm">
        <a class="text-blue-700 underline" href="/">Home</a>
        <AdminLogoutButton client:load />
      </div>
      <header class="glass-panel mx-auto mb-8 max-w-6xl rounded-2xl border px-5 py-4 shadow-sm">
        <nav class="-mx-1 flex gap-2 overflow-x-auto px-1 pb-1 text-sm text-muted-foreground">
          {
            navItems.map((item) => {
              const isActive = Astro.url.pathname === item.href;
              return (
                <a
                  class:list={[
                    "rounded-full border px-3 py-1.5 whitespace-nowrap transition-colors",
                    isActive
                      ? "bg-primary text-primary-foreground border-primary"
                      : "hover:bg-secondary",
                  ]}
                  href={item.href}
                  aria-current={isActive ? "page" : undefined}
                >
                  {item.label}
                </a>
              );
            })
          }
        </nav>
      </header>
      <section id="admin-main-content" class="mx-auto max-w-6xl">
        <slot />
      </section>
    </main>
  </body>
</html>
