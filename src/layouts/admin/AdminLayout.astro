---
import "../../styles/global.css";
import { toAbsoluteUrl } from "@/lib/seo";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Admin surface scaffold." } = Astro.props;
const canonicalHref = toAbsoluteUrl(`${Astro.url.pathname}${Astro.url.search}`);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="robots" content="noindex,nofollow" />
    <link rel="canonical" href={canonicalHref} />
    <title>{title} | Telecommut Admin</title>
  </head>
  <body>
    <main class="mx-auto min-h-screen max-w-6xl p-8">
      <header class="mb-8 border-b pb-4">
        <h1 class="text-2xl font-semibold tracking-tight">Admin</h1>
        <nav class="mt-3 flex gap-4 text-sm text-muted-foreground">
          <a class="underline" href="/admin/dashboard">Dashboard</a>
          <a class="underline" href="/admin/jobs">Jobs</a>
          <a class="underline" href="/admin/resumes">Resumes</a>
          <a class="underline" href="/admin/users">Users</a>
          <a class="underline" href="/admin/seo">SEO</a>
          <a class="underline" href="/admin/traffic">Traffic</a>
        </nav>
      </header>
      <slot />
    </main>
  </body>
</html>
