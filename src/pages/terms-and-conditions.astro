  </section>

  <style>
    .legal-copy :global(p) {
      margin-top: 0.75rem;
      color: var(--muted-foreground);
      font-size: 0.925rem;
      line-height: 1.6;
    }

    .legal-copy :global(h3) {
      margin-top: 1.5rem;
      font-size: 1.5rem;
      font-weight: 600;
      letter-spacing: -0.01em;
    }

    .legal-copy :global(ul) {
      margin-top: 0.75rem;
      list-style: disc;
      padding-left: 1.25rem;
      color: var(--muted-foreground);
    }

    .legal-copy :global(a) {
      text-decoration: underline;
    }
  </style>
</PublicLayout>
