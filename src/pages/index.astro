---
import Counter from "@/components/health/Counter";
import PublicLayout from "@/layouts/PublicLayout.astro";
import { socialImages } from "@/lib/social-images";
---

<PublicLayout
  title="Home"
  description="Remote work marketplace for distributed teams and high-signal candidates."
  canonicalPath="/"
  socialImagePath={socialImages.home}
  jsonLd={{
    "@context": "https://schema.org",
    "@type": "WebSite",
    name: "Telecommut",
    url: "/",
  }}
>
  <section class="glass-panel rounded-3xl border p-7 shadow-sm md:p-10">
    <p class="text-sm font-semibold tracking-[0.16em] text-muted-foreground uppercase">Remote hiring, tuned for signal</p>
    <h1 class="mt-4 max-w-3xl text-4xl font-semibold tracking-tight md:text-5xl">
      Build distributed teams with faster matching and cleaner applications.
    </h1>
    <p class="mt-4 max-w-2xl text-muted-foreground">
      Telecommut helps remote-first companies move from search to shortlist with structured listings, verified profiles,
      and moderation-first workflows.
    </p>
    <div class="mt-7 flex flex-wrap gap-3">
      <a class="rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-primary-foreground hover:opacity-90" href="/search/jobs">
        Find Remote Jobs
      </a>
      <a class="rounded-full border px-5 py-2.5 text-sm font-semibold hover:bg-secondary" href="/search/resumes">
        Search Candidates
      </a>
      <a class="rounded-full border px-5 py-2.5 text-sm font-semibold hover:bg-secondary" href="/contact">
        Talk to Sales
      </a>
    </div>
  </section>

  <section class="mt-6 grid gap-4 md:grid-cols-3">
    <article class="glass-panel rounded-2xl border p-5">
      <p class="text-xs font-semibold tracking-[0.16em] text-muted-foreground uppercase">For employers</p>
      <h2 class="mt-3 text-xl font-semibold">Publish clear remote roles</h2>
      <p class="mt-2 text-sm text-muted-foreground">Post once, keep application quality high, and route qualified candidates faster.</p>
    </article>
    <article class="glass-panel rounded-2xl border p-5">
      <p class="text-xs font-semibold tracking-[0.16em] text-muted-foreground uppercase">For candidates</p>
      <h2 class="mt-3 text-xl font-semibold">Show verified experience</h2>
      <p class="mt-2 text-sm text-muted-foreground">Build a focused resume profile and appear in searches that match your target stack.</p>
    </article>
    <article class="glass-panel rounded-2xl border p-5">
      <p class="text-xs font-semibold tracking-[0.16em] text-muted-foreground uppercase">For operations</p>
      <h2 class="mt-3 text-xl font-semibold">Run predictable moderation</h2>
      <p class="mt-2 text-sm text-muted-foreground">Use policy-backed workflows to keep the marketplace trusted and response times short.</p>
    </article>
  </section>

  <section class="mt-6 grid gap-4 lg:grid-cols-2">
    <div class="glass-panel rounded-2xl border p-5">
      <h2 class="text-lg font-semibold">Explore</h2>
      <div class="mt-4 grid gap-3 sm:grid-cols-2">
        <a class="rounded-xl border bg-card/60 px-4 py-3 text-sm font-medium hover:bg-card/90" href="/resources">Resources</a>
        <a class="rounded-xl border bg-card/60 px-4 py-3 text-sm font-medium hover:bg-card/90" href="/help">Help Center</a>
        <a class="rounded-xl border bg-card/60 px-4 py-3 text-sm font-medium hover:bg-card/90" href="/privacy-policy">Privacy Policy</a>
        <a class="rounded-xl border bg-card/60 px-4 py-3 text-sm font-medium hover:bg-card/90" href="/terms-and-conditions">Terms</a>
      </div>
    </div>
    <div class="glass-panel rounded-2xl border p-5">
      <p class="mb-3 text-xs font-semibold tracking-[0.16em] text-muted-foreground uppercase">Reactive island smoke test</p>
      <Counter client:load />
    </div>
  </section>
</PublicLayout>
