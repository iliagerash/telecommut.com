---
import PublicLayout from "@/layouts/PublicLayout.astro";

export const prerender = false;

const { id } = Astro.params;
---

<PublicLayout title={`Job ${id ?? ""}`} description="Job detail page.">
  <h1 class="text-3xl font-semibold tracking-tight">Job Detail</h1>
  <p class="mt-3 text-muted-foreground">Job id: <code>{id}</code></p>
  <p class="mt-2 text-muted-foreground">Structured data and crawler semantics will be added in W3-6.</p>
</PublicLayout>
